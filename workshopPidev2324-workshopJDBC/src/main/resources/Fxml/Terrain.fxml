      <Button fx:id="btninserervid" layoutX="218.0" layoutY="536.0" mnemonicParsing="false" onAction="#addvid" text="InsererVideo" />
      <Text fx:id="id" layoutX="300.0" layoutY="88.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ID" />
      <TextField fx:id="tfID" layoutX="218.0" layoutY="106.0" />
    </children>
