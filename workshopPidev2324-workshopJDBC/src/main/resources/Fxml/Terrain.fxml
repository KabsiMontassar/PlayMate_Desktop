<AnchorPane prefHeight="720" prefWidth="1280.0" styleClass="form_container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TerrainController">
    <children>
        <VBox layoutX="14.0" layoutY="16.0" prefHeight="597.0" prefWidth="200.0" spacing="10.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="16.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="nom" />
                <TextField fx:id="tfnom" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="address" />
                <TextField fx:id="tfaddress" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="gradin" />
                <TextField fx:id="tfgradin" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="vestiaire" />
                <TextField fx:id="tfvestiaire" prefHeight="62.0" prefWidth="328.0" />
            <Label text="status" />
            <TextField fx:id="tfstatus" />
            <Label text="prix" />
            <TextField fx:id="tfprix" />
            <Label text="duree" />
            <TextField fx:id="tfduree" />
            <Label text="gouvernorat" />
            <TextField fx:id="tfemplacement" />

            </children>
        </VBox>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="350.0" layoutY="14.0" text="GESTION TERRAIN" textAlignment="CENTER" textFill="#0b0b0b" textOverrun="CLIP">
