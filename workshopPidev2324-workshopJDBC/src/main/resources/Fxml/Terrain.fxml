                <Font name="System Bold" size="26.0" />
            </font>
            <effect>
                <Glow />
            </effect>
        </Label>
        <ButtonBar layoutX="14.0" layoutY="622.0" prefHeight="91.0" prefWidth="487.0">
            <buttons>
                <Button fx:id="btnsave" mnemonicParsing="false" onAction="#createTerrain" prefHeight="35.0" prefWidth="206.0" text="Enregistrer" textFill="#10215e" />
                <Button fx:id="btnupdate" layoutX="436.0" layoutY="17.0" mnemonicParsing="false" onAction="#updateTerrain" text="Modifier" />
                <Button fx:id="btndelete" layoutX="351.0" layoutY="17.0" mnemonicParsing="false" onAction="#deleteTerrain" text="Supprimer" />
            <Button fx:id="btannuler" mnemonicParsing="false" onAction="#clearField" text="Annuler" />
            </buttons>
        </ButtonBar>
      <AnchorPane layoutX="213.0" layoutY="147.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="img" fitHeight="207.0" fitWidth="210.0" layoutX="5.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btinserer" layoutX="5.0" layoutY="157.0" mnemonicParsing="false" onAction="#addTerrain_imageview" prefHeight="34.0" text="Inserer" />
         </children>
      </AnchorPane>
      <AnchorPane layoutX="218.0" layoutY="380.0" prefHeight="200.0" prefWidth="200.0" />
