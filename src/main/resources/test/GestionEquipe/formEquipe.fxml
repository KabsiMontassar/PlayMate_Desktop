<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane prefHeight="400.0"
          prefWidth="600.0"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="test.Controllers.EquipeController.FormEquipeController"
          vgap="20"
          hgap="50">

    <GridPane layoutY="-5.0"
                prefHeight="50.0"
                prefWidth="1283.0"
                style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ffcccc, #ff6666);"
                GridPane.columnIndex="0"
                GridPane.columnSpan="4"
                vgap="20"
                GridPane.rowIndex="0">
        <ImageView fitHeight="70.0"
                   fitWidth="100.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="1"
                   GridPane.rowIndex="0" >
            <image>
                <Image url="@/images/ballT.png"></Image>
            </image>
        </ImageView>
        <TextField fx:id="nameField"
                   style="-fx-background-color: transparent;"
                   GridPane.rowIndex="0"
                   GridPane.columnSpan="1"
                   GridPane.valignment="CENTER"
                   prefHeight="30"
                   GridPane.columnIndex="1">
            <font>
                <Font name="Roboto Bold" size="35.0" />
            </font>
        </TextField>
        <columnConstraints>
            <ColumnConstraints percentWidth="10"/>
            <ColumnConstraints percentWidth="90"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="80"/>
        </rowConstraints>
    </GridPane>
    <TableView fx:id="sourceTableView"
               editable="true"
               prefHeight="200.0"
               prefWidth="200.0"
               GridPane.columnSpan="2"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0">

    </TableView>
    <GridPane  vgap="10"
               pickOnBounds="true"
               GridPane.columnIndex="2"
               GridPane.columnSpan="1"
               GridPane.rowIndex="1" >
        <Button fx:id="addPlayerBtn"
                contentDisplay="CENTER"
                layoutX="1058.0"
                layoutY="641.0"
                mnemonicParsing="false"
                onAction="#updatePlayerList"
                prefWidth="200.0"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"
                style="-fx-background-color: #033e6a; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8;" text="Ajouter Equipe" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="removePlayerBtn"
                contentDisplay="CENTER"
                layoutX="1058.0"
                layoutY="641.0"
                mnemonicParsing="false"
                onAction="#updatePlayerList"
                prefWidth="200.0"
                GridPane.rowIndex="1"
                GridPane.columnIndex="0"
                style="-fx-background-color: #033e6a; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8;" text="Ajouter Equipe" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <columnConstraints>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="50"/>
            <RowConstraints percentHeight="50"/>
        </rowConstraints>
    </GridPane>
    <TableView fx:id="targetTableView"
               editable="true"
               prefHeight="200.0"
               prefWidth="200.0"
               GridPane.columnSpan="2"
               GridPane.rowIndex="1"
               GridPane.columnIndex="3">

    </TableView>
   <columnConstraints>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="20"/>
      <ColumnConstraints percentWidth="20"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="20"/>
      <RowConstraints percentHeight="80" />
   </rowConstraints>

</GridPane>
